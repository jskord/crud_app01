<h1>Edit Message</h1>
<%= form_tag '/messages', method: :post do %>
  <div>
  <%= label_tag :name %>
  <%= text_field_tag @message.name %>
  </div>
  <div>
  <%= label_tag :content %>
  <%= text_field_tag @message.content %>
  </div>
  <%= submit_tag 'Edit Message' %>
<%end%>

<%= @message.name %>
<%= @message.content %>

